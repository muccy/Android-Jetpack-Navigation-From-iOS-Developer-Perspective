<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDADA"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/title_master"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_to_detail" />

    <Button
        android:id="@+id/goToModalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Modal Flow" />

    <Button
        android:id="@+id/openAlertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Alert" />

    <Button
        android:id="@+id/openSheetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Bottom Sheet" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/stepsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/wizardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
